{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "rootDirs": ["@libs", "."],
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@libs/*": ["./libs/*"]
    },
    "lib": ["es2018", "dom"],
    "allowJs": true
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "include": ["./libs/*"]
}
